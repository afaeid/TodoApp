<main>
<div class="todo-cover">
 <div class="todo-header">
   <form class="todo-post-form">
    <input type="text" class="todoValue" placeholder="Add todo..." name="todoValue" required>
    <button type="submit" class="todo-post-btn">Add
    </button>
   </form>
 </div>
 <div class="todo-body">
  <% if(todos.length === 0){ %>
    <p>No todo is available </p>
  <% }else{ %>
    <ul class="todos">
      <% todos.forEach((item, index)=>{ %>
        <li id="<%=item.todoId%>">
         <span class="todoName">
          <%= item.todoValue %>
         </span>
         <i data-todoid="<%=item.todoId%>" class="fa-solid fa-ellipsis-vertical"></i>
        </li>
      <% }) %>
    </ul>
  <% } %>
 
 </div>
</div>
</main